{
  "manifest_version": 3,
  "name": "PostGrupo Facebook",
  "version": "1.0.0",
  "description": "Extens√£o para sincronizar grupos do Facebook com o sistema PostGrupo",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://facebook.com/*",
    "https://www.facebook.com/*",
    "https://postadorfacebook.painelcontrole.xyz/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://facebook.com/*", "https://www.facebook.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PostGrupo Facebook"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}